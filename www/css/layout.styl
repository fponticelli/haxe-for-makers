.step
  background-image radial-gradient(rgba(255,255,255,0.8), rgba(220,220,220,0.9))
  background-position center bottom
  background-repeat no-repeat

footer
  position absolute
  bottom 1em
  text-align right
  width 800px

h1, h2, h3
  margin 0.5em 0

header
  margin-bottom 1em
  h1
    margin 0

 ul
  width 10em
  margin 0 auto
  li
    box-shadow 1px 1px 4px #ddd
    text-align center
    margin-bottom 0.5em
    padding 0.5em 0
    background #fff
    border-radius 32px

.will-fade
  transition opacity 1s
  opacity 0

.do-fade
  opacity 1

figure
  img, iframe
    background #fff
    border 1px solid #999
    padding 8px
    display block
    margin 0 auto
    box-shadow 1px 1px 4px rgba(0,0,0,0.4)
    max-width 800px
    max-height 390px
  figcaption
    text-align center
    font-size 0.7em
    margin-top 10px

.split
  .left, .right
    width 45%
    zoom 0.6
    position absolute
  .right
    left 50%

.split-big
  .left, .right
    width 45%
    position absolute
  .right
    left 50%

.zoom-out
  zoom 0.6